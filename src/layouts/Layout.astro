---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8"/>
		<meta name="description" content="Discord is a plataform to talk"/>
		<meta name="viewport" content="width=device-width"/>
		<link rel="icon" href="/favicon.svg" type="image/svg+xml">
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	*,
	*::after,
	*::before {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}

	body {
		font-family: "Ggsans", sans-serif;
	}

      @font-face {
        font-family: "Ggsans";
        src: url("/fonts/ggsans/ggsansRegular.woff") format("woff");
        font-weight: 400;
        font-style: normal;
        font-display: swap;
      }

	  @font-face {
        font-family: "Ggsans";
        src: url("/fonts/ggsans/ggsansMedium.woff") format("woff");
        font-weight: 500;
        font-style: normal;
        font-display: swap;
      }

	  @font-face {
        font-family: "Ggsans";
        src: url("/fonts/ggsans/ggsansSemiBold.woff") format("woff");
        font-weight: 600;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: "Ggsans";
        src: url("/fonts/ggsans/ggsansBold.woff") format("woff");
        font-weight: 700;
        font-style: normal;
        font-display: swap;
      }


      /* Ginto font */
      
	  @font-face {
        font-family: "GintoNord";
        src: url("/fonts/gintonord/Ginto-Nord-500.woff2") format("woff2");
        font-weight: 500;
        font-style: normal;
        font-display: swap;
      }

	  @font-face {
        font-family: "GintoNord";
        src: url("/fonts/gintonord/Ginto-Nord-600.woff2") format("woff2");
        font-weight: 600;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: "GintoNord";
        src: url("/fonts/gintonord/Ginto-Nord-700.woff2") format("woff2");
        font-weight: 700;
        font-style: normal;
        font-display: swap;
      }
</style>
